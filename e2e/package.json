{
  "name": "anantam-e2e",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "prettier": "^3.8.1"
  },
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "codegen": "npx playwright codegen http://localhost:3000",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "pre-commit": "npm run lint || (echo 'Prettier found issues. Running npm run format...' && npm run format); npm run test"
  }
}
